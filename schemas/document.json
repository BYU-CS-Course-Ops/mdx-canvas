{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/beanlab/mdx-canvas/tree/yaml/schemas/document.json",
  "title": "Canvas Page",
  "description": "A canvas page, such as an assignment, quiz, or page",
  "properties": {
    "title": {
      "description": "The title of the page",
      "type": "string"
    },
    "type": {
      "description": "The type of page",
      "type": "string",
      "enum": [
        "assignment",
        "quiz",
        "page"
      ]
    },
    "required": [
      "title",
      "type",
      "description"
    ]
  },
  "allOf": [
    {
      "if": {"properties": {"type": {"const": "assignment"}}},
      "then": {"$ref": "./assignment.json"}
    },
    {
      "if": {"properties": {"type": {"const": "quiz"}}},
      "then": {"$ref": "./quiz.json"}
    },
    {
      "if": {"properties": {"type": {"const": "page"}}},
      "then": {"$ref": "./page.json"}
    }
  ]
}

